{
  "name": "pomotron",
  "productName": "pomotron",
  "version": "2.0.1-beta",
  "description": "App para controle de horas com alarme",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "npx eslint src",
    "changelog": "conventional-changelog -p pomotron -i CHANGELOG.md -s && git add ."
  },
  "keywords": [],
  "author": "DanielSilva",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "icon": "src/img/watch.ico"
      },
      "electronWinstallerConfig": {
        "name": "pomotron"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "https://github.com/Pomotron/pomotron.git",
        "name": "Pomotron"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "pomotron"
      }
    }
  },
  "dependencies": {
    "easytimer.js": "^4.1.1",
    "electron-compile": "^6.4.2",
    "electron-devtools-installer": "^2.2.3",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.1.0",
    "electron-prebuilt-compile": "^4.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1"
  }
}
